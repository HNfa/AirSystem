    <select id="findByTicketsId" parameterType="String" resultType="cn.wyx.entity.Tickets">
        select * from tb_tickets
        where tickets_id = #{ticketsId};
    </select>

    <update id="decreaseTicketsNum">
        update tb_tickets
        set tb_tickets.tickets_nums = tb_tickets.tickets_nums - #{subNum}
        where tb_tickets.tickets_id = #{ticketsId};
    </update>

</mapper>